@model List<CatraSport.BL.Producto>
@{
    ViewBag.Title = "Index";
}

<h2>Productos</h2>


<table class="table table-bordered table-hover">

    <Thead>
        <tr>
             <th>
                 Codigo
             </th>
             <th>
                 Descripcion
             </th>
            <th>
                Precio
            </th>
        </tr>
    </Thead>

    @foreach (var producto in Model)
    {
        <tr>
            <td>@producto.Id</td>
            <td>@producto.Descripcion</td>
            <td>@producto.Precio</td>
        </tr>
    }

</table>

